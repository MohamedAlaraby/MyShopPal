<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_off_white"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:id="@+id/root_element_product_fragment"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_product_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root_cons_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>
<ImageView
    android:id="@+id/iv_item_image"
    android:layout_width="@dimen/item_image_width"
    android:layout_height="@dimen/item_image_height"
    android:layout_gravity="start"
    android:layout_margin="10dp"
    android:contentDescription="@string/content_description"
    android:scaleType="fitXY"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
 />

<com.example.myshoppal.utils.MSPTextViewBold
    android:id="@+id/tv_item_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/item_value_text_color"
    android:textSize="@dimen/rv_item_name_text_size"
    tools:text="Name"
    app:layout_constraintStart_toEndOf="@+id/iv_item_image"
    app:layout_constraintTop_toTopOf="@+id/iv_item_image"
    android:layout_marginStart="10dp"
    />

<com.example.myshoppal.utils.MSPTextViewRegular
    android:id="@+id/tv_item_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/rv_item_price_margin_top"
    android:textColor="@color/item_value_text_color"
    android:textSize="@dimen/rv_item_price_text_size"
    android:textStyle="bold"
    tools:text="100.00$"
    app:layout_constraintTop_toBottomOf="@+id/tv_item_name"
    app:layout_constraintStart_toEndOf="@+id/iv_item_image"
    android:layout_marginStart="10dp"
    />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_item_product_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:padding="@dimen/ic_vector_delete"
        android:src="@drawable/ic_vector_delete"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_name"
        tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>